<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView

        android:layout_width="263dp"
        android:layout_height="48dp"
        android:layout_marginTop="96dp"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:fontFamily="@font/resistmediun"
        android:text="Создать аккаунт">

    </TextView>

    <TextView

        android:layout_width="325dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/resistthin"
        android:text="Пришло время создать аккаунт, чтобы совершать покупки"
        android:gravity="center_vertical|center_horizontal"
        >

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="43dp"
                android:layout_height="26dp"
                android:textSize="18sp"
                android:text="Имя"
                android:textColor="@color/black"
                android:fontFamily="@font/resistthin">
            </TextView>

            <EditText
                android:layout_width="328dp"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:background="#EEEEEE"
                >

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="43dp"
                    android:layout_height="26dp"
                    android:textSize="18sp"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:fontFamily="@font/resistthin">
                </TextView>

                <EditText
                    android:layout_width="328dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:background="#EEEEEE"
                    >

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:animationCache="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="58dp"
                    android:layout_height="26dp"
                    android:fontFamily="@font/resistthin"
                    android:text="Пароль"
                    android:textColor="@color/black"
                    android:textSize="18sp">

                </TextView>

                <EditText
                    android:layout_width="328dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:background="#EEEEEE">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_marginStart="16dp">

                <CheckBox
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#EEEEEE"
                    android:buttonTint="#EEEEEE">
                </CheckBox>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/resistthin"
                    android:text="Запомнить меня"
                    android:layout_marginStart="4dp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/resistthin"
                    android:text="Не помню пароль"
                    android:layout_marginStart="83dp">
                </TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="">

        <CheckBox
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#EEEEEE"
            android:buttonTint="#EEEEEE"
            android:layout_marginTop="22dp"
            android:layout_marginStart="18dp">
        </CheckBox>

        <TextView

            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/resistthin"
            android:text="Я согласен с Условиями предоставления услуг и Политикой конфиденциальности "
            android:gravity="center_vertical|center_horizontal"
            >

        </TextView>

    </LinearLayout>

    <Button
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:backgroundTint="#E73F46"
        android:fontFamily="@font/resistthin"
        android:text="Зарегистрироваться"
        android:gravity="center"
        android:layout_marginTop="48dp"
        android:textSize="23sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32sp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нет аккаунта?"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/resistthin"

            >

        </TextView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/resistthin"
            android:text="Создать"
            android:textColor="#E63F46"
            android:textSize="14sp">

        </TextView>

    </LinearLayout>

</LinearLayout>