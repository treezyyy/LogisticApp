<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="76dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/avatar_men">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginStart="38dp"
            android:fontFamily="@font/resistregular"
            android:textColor="@color/black"
            android:text="Привет, Алексей"
            >

        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:layout_marginStart="11dp">
        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notification"
            android:layout_marginStart="11dp">
        </ImageView>

    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/restangel_main"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="ID:8264"
            android:fontFamily="@font/resistmediun"
            android:textColor="@color/white"
            android:layout_marginStart="19dp"
            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="$: "
            android:fontFamily="@font/resistmediun"
            android:textColor="@color/white"
            android:layout_marginStart="157dp"
            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="0"
            android:fontFamily="@font/resistmediun"
            android:textColor="@color/black"
            android:layout_marginStart="6dp"
            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="$: "
            android:fontFamily="@font/resistmediun"
            android:textColor="@color/white"
            android:layout_marginStart="6dp"
            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="0"
            android:fontFamily="@font/resistmediun"
            android:textColor="@color/black"
            android:layout_marginStart="6dp"
            >

        </TextView>

    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="26dp"
        android:layout_gravity="center_vertical">

        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_home">

        </ImageButton>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_palok"
            android:layout_marginStart="8dp"
            android:layout_gravity="center">

        </ImageView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:fontFamily="@font/resistlight"
            android:text="Заказы">

        </TextView>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_palok"
            android:layout_marginStart="8dp"
            android:layout_gravity="center">

        </ImageView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:fontFamily="@font/resistlight"
            android:text="Новые">

        </TextView>

    </LinearLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/resistlight"
        android:text="В первом ссылка, во втором денег"
        >

    </TextView>

    <EditText
        android:id="@+id/ssilka"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:background="#EEEEEE"
        android:textColor="#B8B8B8"
        android:textSize="16sp"
        android:fontFamily="@font/resistthin"
        android:layout_marginStart="19dp"
        >

    </EditText>

    <EditText
        android:id="@+id/deneg"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:background="#EEEEEE"
        android:textColor="#B8B8B8"
        android:textSize="16sp"
        android:fontFamily="@font/resistthin"
        android:layout_marginStart="19dp"
        >

    </EditText>

    <Button
        android:id="@+id/create_button"
        android:layout_width="140dp"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:backgroundTint="#E73F46"
        android:fontFamily="@font/resistthin"
        android:text="Создать заказ"
        android:textSize="20sp" />

</LinearLayout>